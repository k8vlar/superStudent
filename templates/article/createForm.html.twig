{% extends 'base.html.twig' %}

{% block title %}CreatPage{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h3 class="mt-5 mb-5">Formulaire de création</h3>
        <div class="col-md-6 offset-md-3">
        {{form_start(form)}}
            {#{{form(form)}} peut etre supprimé car on utilise form_start et form_end pour tout afficher #}
            <div class="form-group text">
            {{ form_label(form.titre) }}
            {{ form_widget(form.titre, { 'attr': {'class':'form-control'}}) }}
            </div>
            <div class="form-group text">
            {{ form_label(form.content)}}
            {{ form_widget(form.content, { 'attr': {'class':'form-control'}}) }}
            </div>
            <div class="form-group text">
            {{ form_label(form.author)}}
            {{ form_widget(form.author, { 'attr': {'class':'form-control'}}) }}
            </div>
            <div class="form-group">
                <button class="btn btn-info mt-2 text">Soumettre</button>
            </div>
        {{form_end(form)}}
        </div>
    </div>
</div>
{% endblock %}